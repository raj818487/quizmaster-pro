{
  "name": "quizmaster-pro-backend",
  "version": "1.0.0",
  "description": "Backend server for QuizMaster Pro application",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "echo 'Backend build complete - using Node.js runtime'",
    "init-db": "node scripts/init-postgres.js",
    "generate-data": "node scripts/generate-dummy-data.js",
    "test-api": "node tests/test-api-endpoints.js",
    "setup": "npm run init-db && npm run generate-data",
    "test": "npm run test-api",
    "postinstall": "echo 'Backend dependencies installed successfully'",
    "railway:start": "npm start",
    "heroku-postbuild": "echo 'Heroku build complete'",
    "vercel-build": "echo 'Vercel build complete'"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/pg": "^8.10.7",
    "nodemon": "^3.0.2"
  }
}
